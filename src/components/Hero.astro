---
import books from '../content/mocks.json'
---

<section aria-label="Recommended books for hackers" class="mb-6">
  <div class="mx-auto max-w-screen-xl px-4 justify-center flex">
    <div class="grid gap-10 md:grid-cols-2">
      {
        books.map(({ title, description, author, img, url }) => {
  
          return (
          <article class="flex">
            <a 
              href={`/book/${url.es}`}
              class="mb-2 xl:mb-0 transition hover:scale-110"
            >
              <img 
                src={img} alt="Hacker books" 
                class="w-48 transition mr-5 rounded" />
            </a>
            
            <div class="flex flex-col justify-between gap-2 my-2">
              <h2 class="max-w-sm text-2xl font-semibold">
                {title}
              </h2>
  
              <p class="italic max-w-sm opacity-75">
                {description}
              </p>
  
              <p class="">
                {author}
              </p>
            </div>
          </article>
          )
        })
      }
    </div>
  </div>
</section>
