---
import books from '../content/mocks.json'
---

<section aria-label="Recommended books for hackers" class="mb-10">
  <div class="mx-auto max-w-screen-xl px-4 justify-center flex items-center">
    <div class="grid gap-10 lg:grid-cols-2">
      {
        books.map(({ title, description, author, img, slug }) => {
  
          return (
          <article class="flex">
            <a 
              href={`/books/${slug}`}
              class="mb-2 xl:mb-0 transition hover:scale-110"
            >
              <img 
                src={img} alt="Hacker books" 
                class="max-w-48 transition pr-[16px] rounded-md" />
            </a>
            
            <div class="flex flex-col justify-between gap-2 my-[24px]">
              <h2 class="max-w-sm text-2xl font-semibold">
                {title}
              </h2>
  
              <p class="italic max-w-sm opacity-75">
                {description}
              </p>
  
              <p>
                <span class="opacity-75">Author: </span>
                {author}
              </p>
            </div>
          </article>
          )
        })
      }
    </div>
  </div>
</section>
