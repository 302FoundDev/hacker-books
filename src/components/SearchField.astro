<search class="mb-24 mt-14">
  <form>
    <label for="search" class="opacity-75">
      Search book
      <input
        id="search" 
        name="search" 
        type="text" 
        placeholder="type your search..."
        class="border border-gray-700 block rounded py-1 px-4 w-96"
      />
    </label>
  </form>
</search>

<script>
  const searchInput = document.querySelector('input[name="search"]') as HTMLInputElement

  searchInput?.addEventListener('input', () => {
    alert(searchInput.value)
  })
</script>

