---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Hacker books, just for hackers">
	<main class="grid min-h-dvh">
		<div class="mb-24">
			<h1 class="text-6xl font-exatrabold mt-8 text-center">Hacker 👨🏻‍💻<span class="block">Books</s></h1>
			<h3 class="text-center opacity-60 text-lg">Some books about hacking</h3>
		</div>

		<Hero />
		<Footer />

	</main>
</Layout>

<style>
	main {
		grid-template-columns: repeat(auto, 1fr, auto);
	}
</style>
